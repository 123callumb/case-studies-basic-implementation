@model BaseViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img class="my-5 shadow-lg rounded" src="img/ABCEnergyLogo.PNG"/>
    <div class="d-flex flex-column flex-sm-row align-items-center">
        <!-- Breadcrumb, User name, Home button and Logout button -->
        <ol class="breadcrumb me-auto">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
        <div class="me-3">@Model.user.Email</div>
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn-link" })
        <a class="btn btn-link" href="@Url.Action("LogoutUser", "Authentication")" data-voice="log out">Logout</a>
    </div>
    <div class="p-3 bg-white">
        <div class="d-flex flex-wrap row-cols-2 row-cols-sm-2 row-cols-md-5">
            <div class="col">
                <div class="home-menu-item cs-inventory" data-voice="Inventory">
                    <span class="material-icons">
                        domain
                    </span>
                    Inventory
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-report" data-voice="Report">
                    <span class="material-icons">
                        multiline_chart
                    </span>
                    Report
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-supplier" data-voice="Supplier">
                    <span class="material-icons">
                        person_outline
                    </span>
                    Supplier
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-vendor" data-voice="Vendor">
                    <span class="material-icons-outlined">
                        next_week
                    </span>
                    Vendor
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-company-resources" data-voice="Company Resources">
                    <span class="material-icons">
                        folder_open
                    </span>
                    Company Resources
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-organisation" data-voice="Organisation">
                    <span class="material-icons-outlined">
                        people
                    </span>
                    Organisation
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-accounts" data-voice="Accounts">
                    <span class="material-icons">
                        attach_money
                    </span>
                    Accounts
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-contracts" data-voice="Contracts">
                    <span class="material-icons-outlined">
                        assignment
                    </span>
                    Contracts
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-customer-management" data-voice="Customer Management">
                    <span class="material-icons-outlined">
                        contact_phone
                    </span>
                    Customer Management
                </div>
            </div>
            <div class="col">
                <div class="home-menu-item cs-requests" data-voice="Requests">
                    <span class="material-icons-outlined">
                        check_box
                    </span>
                    Requests
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        document.querySelector('.cs-vendor').addEventListener('click', function() {
            document.location.href = "@Url.Action("VendorMenu", "Home")";
        });
    </script>
}
